@model DoAnWebTuyenDung.Models.User

@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
    ViewBag.Title = "Đăng Ký Thành Viên";
}

<div class="container">
    <div class="logo">
        <a href="~/Home/TrangChu">
            <img src="~/Content/vieclam24h.jpg" alt="Vieclam24h Logo">
        </a>
    </div>
    <h1>Đăng Ký Thành Viên!</h1>

    @using (Html.BeginForm("Register", "Register", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.username)
            @Html.TextBoxFor(model => model.username, new { @class = "form-control", placeholder = "Tên người dùng" })
            @Html.ValidationMessageFor(model => model.username)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.password)
            @Html.PasswordFor(model => model.password, new { @class = "form-control", placeholder = "Mật Khẩu (6-50 ký tự, 1 chữ hoa, 1 số)" })
            @Html.ValidationMessageFor(model => model.password)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.email)
            @Html.TextBoxFor(model => model.email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(model => model.email)
        </div>

        <div class="form-group">
            <select name="country-code" class="form-control">
                <option value="+84">+84 Việt Nam</option>
                <!-- Add other countries if needed -->
            </select>
        </div>

        <div class="form-group">
            @Html.Label("Số điện thoại")
            <input type="text" name="phone" class="form-control" placeholder="Số điện thoại">
        </div>

        <label class="d-flex align-items-center">
            <input type="checkbox" name="agree">
            Tôi đồng ý với <a href="#">Thỏa thuận sử dụng</a> và <a href="#">Quy định bảo mật</a> của Vieclam24h
        </label>

        <button type="submit" class="btn-submit">Đăng Ký</button>

    }

    <div class="footer">
        Bạn là thành viên Vieclam24h? <a href="~/Views/Account/LoginLogout.cshtml">Đăng Nhập</a><br>
        Nếu bạn đang có nhu cầu tuyển dụng, vui lòng đăng ký <a href="#">tại đây</a>
    </div>
</div>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}


<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f7f7f7;
        margin: 0;
        padding: 0;
    }

    .container {
        width: 100%;
        max-width: 400px;
        margin: 50px auto;
        background-color: white;
        padding: 20px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .logo {
        margin-bottom: 25px;
    }

    h1 {
        font-size: 30px;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-submit {
        background-color: #FF6F00;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
    }

    .footer {
        margin-top: 20px;
        font-size: 12px;
        color: #777;
    }

        .footer a {
            color: #FF6F00;
            text-decoration: none;
        }
</style>



@model IEnumerable<DoAnWebTuyenDung.Models.Review>

@{
    ViewBag.Title = "Danh sách đánh giá";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";

}

<h2>Danh sách đánh giá</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Job Title</th>
            <th>Rating</th>
            <th>Review</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.Job.title</td>
                <td>@review.rating</td>
                <td>@review.review_text</td>
                <td>@Html.DisplayFor(modelItem => review.created_at)</td> <!-- Sử dụng DisplayFor để hiển thị giá trị -->
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = review.review_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = review.review_id })
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Create New Review", "Create")
</p>

@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
@model DoAnWebTuyenDung.Models.Company

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CÔNG TY VNG</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f8f8f8;
            color: #333;
        }

        

        .page-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f7f7f7;
            border-radius: 10px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        }

        .page-title {
            font-size: 2rem;
            font-weight: bold;
            color: #ff6600;
            margin-bottom: 30px;
            text-align: center;
        }

        .company-list {
            display: flex;
            flex-direction: column;
            gap: 20px;
            width: 100%;
        }

        .company-card {
            display: flex;
            flex-direction: column;
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            padding: 20px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .company-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            }

        .company-header {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .company-logo {
            width: 80px;
            height: auto;
            flex-shrink: 0;
            border-radius: 8px;
        }

        .company-details {
            display: flex;
            flex-direction: column;
            gap: 5px;
            width: 100%;
        }

        .company-name {
            font-size: 1.4rem;
            font-weight: bold;
            color: #333;
            margin: 0;
        }

        .company-info {
            font-size: 0.95rem;
            color: #666;
            display: flex;
            flex-direction: column;
            gap: 3px;
        }

        .icon {
            color: #007bff;
            font-weight: bold;
            margin-right: 8px;
        }

        .company-info p {
            display: flex;
            align-items: center;
            margin: 0;
        }

        .company-name a {
            color: #333;
            text-decoration: none;
        }

            .company-name a:hover {
                color: #007bff;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="page-container">
        <h2 class="page-title">Chi tiết Công Ty</h2>
        <div class="company-list">
            <div class="company-card">
                <div class="company-header">
                    <!-- Logo công ty -->
                    <img src="@Model.company_logo" alt="@Model.company_name Logo" class="company-logo" />

                    <!-- Thông tin tiêu đề và chi tiết -->
                    <div class="company-details">
                        <h3 class="company-name">
                            <a href="@Url.Action("Details", "Company", new { id = Model.company_id })">
                                @Model.company_name
                            </a>
                        </h3>
                        <div class="company-info">
                            <p><span class="icon">🏢</span><strong>Ngành:</strong>  @Model.industry</p>
                            <p><span class="icon">📍</span><strong>Địa điểm:</strong>  @Model.location</p>
                            <p><span class="icon">📝</span><strong>Mô tả:</strong>  @Model.description</p>
                            <p><span class="icon">🛠️</span><strong>Nhà tuyển dụng:</strong>  @Model.Employers.Count</p>
                            <p><span class="icon">💼</span><strong>Số công việc:</strong>  @Model.Jobs.Count</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <a href="@Url.Action("Index", "Company")" class="back-link">Quay lại danh sách công ty</a>
    </div>
</body>
</html>
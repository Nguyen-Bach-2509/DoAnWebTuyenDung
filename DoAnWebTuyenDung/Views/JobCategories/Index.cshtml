
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
<style>
    html {
        scroll-behavior: smooth;
    }
    .banner {
        position: relative;
        background: url('https://plus.unsplash.com/premium_photo-1678917827737-aa7dc0b0c46f?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        height: 500px;
        display: flex;
        
        justify-content: center;
        align-items: center;
        color: white;
        z-index: 1;
    }
        .banner::before
    {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5); /* Màu đen với độ mờ 50% */
        z-index: -1; /* Lớp phủ dưới nội dung */
    }

    .banner-content {
        text-align: left;
        max-width: 600px;
    }

        .banner-content h1 {
            font-size: 48px;
            margin: 0;
            text-align: center;
            font-weight: bold;
        }

        .banner-content p {
            font-size: 18px;
            text-align: center;
            padding: 30px;
        }

    .banner-buttons {
        display: flex;
    }

        .banner-buttons a {
            text-decoration: none;
            color: #FF4C4C;
            background-color: transparent;
            border: 1px solid #FF4C4C;
            padding: 10px 20px;
            border-radius: 50px;
            margin: auto;
            font-weight: bold;
        }



            .banner-buttons a:hover {
                background-color: #FF4C4C; /* Darker green on hover */
                color: white;
            }

    .job-section {
        text-align: center;
        color: #2d384a;
        min-height: 100vh;
    }

        .job-section h2 {
            font-size: 2em;
            font-weight: 600;
            margin-top: 80px;
            margin-bottom: 8px;
        }

        .job-section p a {
            color: #007bff;
            text-decoration: none;
            font-size: 1em;
        }
        .job-section p {
            margin-top: 30px;
            margin-bottom: 60px;
        }

        .job-section .categories {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

            .job-section .categories a {
                margin: 0 15px;
                color: #b0b0b0;
                text-decoration: none;
                font-size: 1em;
                font-weight: 500;
                position: relative;
                transition: color 0.3s;
            }

                .job-section .categories a:hover,
                .job-section .categories a.active {
                    color: #007bff;
                }

                    .job-section .categories a.active::after {
                        content: "";
                        position: absolute;
                        left: 0;
                        right: 0;
                        bottom: -10px;
                        height: 3px;
                        background-color: #007bff;
                    }

    #job-listing {
        margin-top: 20px;
    }

    .job-item {
        border: 1px solid #ddd;
        padding: 15px;
        margin-bottom: 10px;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        .job-item h3 {
            margin-bottom: 8px;
            font-size: 1.2em;
        }

        .job-item p {
            margin: 5px 0;
            color: #555;
        }
</style>
}

<body>
    <div class="banner">
        <div class="banner-content">
            <h1>Bắt đầu sự nghiệp ngay hôm nay!</h1>
            <p>Tìm việc dễ dàng, đón đầu thành công</p>
            <div class="banner-buttons">
                <a class="start-btn" href="#job-section">XEM THÊM CÁC NGÀNH NGHỀ</a>

            </div>
        </div>
    </div>

    <section id="job-section" class="job-section">
        <h2>Khám phá các công việc dành cho bạn</h2>
        <p><a href="#">Lựa chọn ngành nghề phù hợp với sở thích và đam mê của bạn.</a></p>
        <div class="categories">
            <a href="#" class="active">Tất Cả Công Việc Khả Dụng</a>
            <a href="#">Công Nghệ Thông Tin (IT)</a>
            <a href="#">Marketing</a>
            <a href="#">Tài Chính</a>
            <a href="#">Phục Vụ</a>
        </div>
    </section>
  
</body>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    // active khi bấm các thẻ a

    document.addEventListener("DOMContentLoaded", function () {
        const categoryLinks = document.querySelectorAll(".categories a");

        categoryLinks.forEach(link => {
            link.addEventListener("click", function (e) {
                e.preventDefault(); // Ngăn không cho trang tự động tải lại

                // Loại bỏ class 'active' khỏi tất cả các liên kết
                categoryLinks.forEach(item => item.classList.remove("active"));

                // Thêm class 'active' cho liên kết vừa được nhấn
                this.classList.add("active");
            });
        });
    });

    // hiệu ứng scroll khi bấm vào nút
    document.querySelector('.start-btn').addEventListener('click', function (event) {
        event.preventDefault(); // Ngăn không cho trang tải lại
        scrollToSectionSlowly('#job-section');
    });

    function scrollToSectionSlowly(target) {
        const targetPosition = document.querySelector(target).offsetTop; // Lấy vị trí của phần tử
        const startPosition = window.pageYOffset;
        const distance = targetPosition - startPosition;
        const duration = 1000; // Thời gian cuộn (ms)
        let startTime = null;

        function animationScroll(currentTime) {
            if (startTime === null) startTime = currentTime;
            const timeElapsed = currentTime - startTime;
            const run = easeInOutQuad(timeElapsed, startPosition, distance, duration);
            window.scrollTo(0, run);

            if (timeElapsed < duration) requestAnimationFrame(animationScroll); // Tiếp tục cuộn nếu chưa hết thời gian
        }

        // Hàm ease để tạo hiệu ứng cuộn mượt hơn
        function easeInOutQuad(t, b, c, d) {
            t /= d / 2;
            if (t < 1) return c / 2 * t * t + b;
            t--;
            return -c / 2 * (t * (t - 2) - 1) + b;
        }

        requestAnimationFrame(animationScroll);
    }

    // JOBS
     $(document).ready(function () {
        function fetchJobs(category) {
            $.ajax({
                url: '@Url.Action("GetJobsByCategory", "Jobs")',
                data: { category: category },
                success: function (data) {
                    renderJobs(data);
                }
            });
        }

        function renderJobs(jobs) {
            const jobListing = $("#job-listing");
            jobListing.empty();
            jobs.forEach(job => {
                jobListing.append(`
                    <div class="job-item">
                        <h3>${job.Title}</h3>
                        <p>${job.CompanyName}</p>
                        <p>Location: ${job.Location}</p>
                        <p>Salary: ${job.Salary}</p>
                        <p>Employment Type: ${job.EmploymentType}</p>
                        <p>Posted At: ${new Date(job.PostedAt).toLocaleDateString()}</p>
                    </div>
                `);
            });
        }

        // Khi tải trang lần đầu, tải tất cả công việc
        fetchJobs("Tất Cả Công Việc Khả Dụng");

        // Lắng nghe sự kiện nhấp vào danh mục
        $(".category-link").click(function (e) {
            e.preventDefault();
            $(".category-link").removeClass("active");
            $(this).addClass("active");

            const category = $(this).data("category");
            fetchJobs(category);
        });
    });

</script>
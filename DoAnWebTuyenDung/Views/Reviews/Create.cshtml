

@model DoAnWebTuyenDung.Models.Review

@{
    ViewBag.Title = "Tạo đánh giá mới"; 
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2>Tạo đánh giá mới</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="job_id">Công việc</label>
        @Html.DropDownList("job_id", null, "Chọn công việc", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.job_id)
    </div>

    <div class="form-group">
        <label for="rating">Điểm đánh giá (1-5)</label>
        @Html.EditorFor(model => model.rating, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1", max = "5" } })
        @Html.ValidationMessageFor(model => model.rating)
    </div>

    <div class="form-group">
        <label for="review_text">Nội dung đánh giá</label>
        @Html.TextAreaFor(model => model.review_text, new { @class = "form-control", rows = "4" })
        @Html.ValidationMessageFor(model => model.review_text)
    </div>

    <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@model DoAnWebTuyenDung.Models.Company

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-3" style="color:#ff4d4d">Xóa Công Ty</h2>

<div class="container mt-4">
    <div class="card border-0 shadow-sm mx-auto" style="max-width: 800px;">
        <!-- Tiêu đề và màu nền của card-header -->
        <div class="card-header text-center" style="background-color: #ff4d4d; color: #ffffff;">
            <h5 class="mb-0">Bạn có chắc chắn muốn xóa công ty này không?</h5>
        </div>
        <div class="card-body" style="background-color: #f8d7da;">
            <div class="text-center text-danger fw-bold mb-4">Thông tin công ty sẽ bị xóa vĩnh viễn.</div>

            <!-- Thông tin công ty -->

            <dl class="row justify-content-center">
                <dt class="col-sm-3">Logo công ty:</dt>
                <dd class="col-sm-7">
                    <img src="@Model.company_logo" alt="Logo công ty" style="width: 100px; height: auto;" />
                </dd>
                <dt class="col-sm-3">Tên công ty:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.company_name)</dd>

                <dt class="col-sm-3">Địa điểm:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.location)</dd>

                <dt class="col-sm-3">Ngành nghề:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.industry)</dd>

                <dt class="col-sm-3">Mô tả:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.description)</dd>

            </dl>

            <!-- Form xác nhận xóa -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-center mt-4">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary ms-2" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

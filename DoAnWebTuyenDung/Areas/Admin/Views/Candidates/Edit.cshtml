@model DoAnWebTuyenDung.Models.Candidate

@{
    ViewBag.Title = "Chỉnh Sửa Ứng Viên";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-3">Chỉnh Sửa Thông Tin Ứng Viên</h2>

<div class="container mt-4">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card border-0 shadow-sm mx-auto" style="max-width: 800px;">
            <!-- Header của card -->
            <div class="card-header text-center" style="background-color: #0094ff; color: #ffffff;">
                <h5 class="mb-0" style="color:#ffffff">Chỉnh Sửa Thông Tin Ứng Viên</h5>
            </div>
            <div class="card-body" style="background-color: #e9ecef;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.candidate_id)

                <!-- Trường Người Dùng -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.user_id, "Người Dùng", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("user_id", null, new { @class = "form-control mx-auto", style = "max-width: 600px;" })
                    @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Họ Tên -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.full_name, "Họ Tên", new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.full_name, new { htmlAttributes = new { @class = "form-control mx-auto", style = "max-width: 600px;" } })
                    @Html.ValidationMessageFor(model => model.full_name, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Số Điện Thoại -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.phone, "Số Điện Thoại", new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control mx-auto", style = "max-width: 600px;" } })
                    @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Email -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.email, "Email", new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control mx-auto", style = "max-width: 600px;" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Kinh Nghiệm -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.experience, "Kinh Nghiệm", new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.experience, new { htmlAttributes = new { @class = "form-control mx-auto", style = "max-width: 600px;" } })
                    @Html.ValidationMessageFor(model => model.experience, "", new { @class = "text-danger" })
                </div>

                <!-- Trường CV -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.resume, "CV", new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.resume, new { htmlAttributes = new { @class = "form-control mx-auto", style = "max-width: 600px;" } })
                    @Html.ValidationMessageFor(model => model.resume, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Địa Điểm -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.location, "Địa Điểm", new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.location, new { htmlAttributes = new { @class = "form-control mx-auto", style = "max-width: 600px;" } })
                    @Html.ValidationMessageFor(model => model.location, "", new { @class = "text-danger" })
                </div>

                <!-- Nút Lưu -->
                <div class="text-center mt-4">
                    <input type="submit" value="Lưu Thay Đổi" class="btn btn-success" />
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary ms-2" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model IEnumerable<DoAnWebTuyenDung.Models.Job>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-3">Danh Sách Công Việc</h2>

<div class="container mt-4">

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th class="text-center">@Html.DisplayNameFor(model => model.title)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.employment_type)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.deadline)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.Company.company_name)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.Job_Categories.category_name)</th>
                <th class="text-center">Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.title)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.employment_type)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.deadline)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.Company.company_name)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.Job_Categories.category_name)</td>
                    <td class="text-center">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.job_id }, new { @class = "btn btn-outline-warning btn-sm" })
                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.job_id }, new { @class = "btn btn-outline-info btn-sm" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.job_id }, new { @class = "btn btn-outline-danger btn-sm", onclick = "return confirm('Bạn có chắc chắn muốn xóa?');" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end mb-3">
        @Html.ActionLink("Thêm Mới", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>

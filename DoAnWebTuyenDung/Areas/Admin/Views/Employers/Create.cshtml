@model DoAnWebTuyenDung.Models.Employer

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-3">Thêm Nhà Tuyển Dụng</h2>

<div class="container mt-4">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card border-0 shadow-sm mx-auto" style="max-width: 800px;">
            <!-- Header của card -->
            <div class="card-header text-center" style="background-color: #0094ff; color: #ffffff;">
                <h5 class="mb-0" style="color:#ffffff">Thêm Nhà Tuyển Dụng</h5>
            </div>
            <div class="card-body" style="background-color: #e9ecef;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!-- Trường Người Dùng -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.user_id, "Người Dùng", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("user_id", null, new { @class = "form-control mx-auto", style = "max-width: 600px;" })
                    @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Công Ty -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.company_id, "Công Ty", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("company_id", null, new { @class = "form-control mx-auto", style = "max-width: 600px;" })
                    @Html.ValidationMessageFor(model => model.company_id, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Vai Trò -->
                <div class="mb-3 text-center">
                    @Html.Label("Vai Trò", new { @class = "form-label fw-bold" })
                    <div class="d-flex justify-content-center flex-wrap">
                        <div class="form-check form-check-inline">
                            <input type="radio" name="role" value="HR Manager" class="form-check-input" id="roleHRManager" />
                            <label class="form-check-label" for="roleHRManager">HR Manager</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input type="radio" name="role" value="Recruiter" class="form-check-input" id="roleRecruiter" />
                            <label class="form-check-label" for="roleRecruiter">Recruiter</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input type="radio" name="role" value="Supervisor" class="form-check-input" id="roleSupervisor" />
                            <label class="form-check-label" for="roleSupervisor">Supervisor</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input type="radio" name="role" value="Hiring Manager" class="form-check-input" id="roleHiringManager" />
                            <label class="form-check-label" for="roleHiringManager">Hiring Manager</label>
                        </div>
                    </div>
                    @Html.ValidationMessage("role", "", new { @class = "text-danger" })
                </div>

                <!-- Nút Lưu -->
                <div class="text-center mt-4">
                    <input type="submit" value="Thêm Mới" class="btn btn-success" />
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary ms-2" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

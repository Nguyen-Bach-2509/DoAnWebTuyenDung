@model DoAnWebTuyenDung.Models.Application

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-3" style="color:#ff4d4d">Xóa Thông Tin Đơn Ứng Tuyển</h2>

<div class="container mt-4">
    <div class="card border-0 shadow-sm mx-auto" style="max-width: 800px;">
        <!-- Tiêu đề và màu nền của card-header -->
        <div class="card-header text-center" style="background-color: #ff4d4d; color: #ffffff;">
            <h5 class="mb-0">Bạn có chắc chắn muốn xóa đơn ứng tuyển này không?</h5>
        </div>
        <div class="card-body" style="background-color: #f8d7da;">
            <div class="text-center text-danger fw-bold mb-4">Thông tin đơn ứng tuyển sẽ bị xóa vĩnh viễn.</div>

            <!-- Thông tin đơn ứng tuyển -->
            <dl class="row justify-content-center">
                <dt class="col-sm-3">Trạng Thái:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.status)</dd>

                <dt class="col-sm-3">Ngày Nộp:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.applied_at)</dd>

                <dt class="col-sm-3">Ghi Chú:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.notes)</dd>

                <dt class="col-sm-3">Ứng Viên:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.Candidate.full_name)</dd>

                <dt class="col-sm-3">Công Việc:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.Job.title)</dd>
            </dl>

            <!-- Form xác nhận xóa -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-center mt-4">
                    <input type="submit" value="Xóa" class="btn btn-danger" />
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary ms-2" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

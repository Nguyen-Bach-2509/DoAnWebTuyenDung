@model IEnumerable<DoAnWebTuyenDung.Models.Application>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-3">Danh Sách Đơn Ứng Tuyển</h2>

<div class="container mt-4">
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th class="text-center">@Html.DisplayNameFor(model => model.status)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.applied_at)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.notes)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.Candidate.full_name)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.Job.title)</th>
                <th class="text-center">Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.status)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.applied_at)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.notes)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.Candidate.full_name)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.Job.title)</td>
                    <td class="text-center">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.application_id }, new { @class = "btn btn-outline-warning btn-sm" })
                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.application_id }, new { @class = "btn btn-outline-info btn-sm" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.application_id }, new { @class = "btn btn-outline-danger btn-sm", onclick = "return confirm('Bạn có chắc chắn muốn xóa?');" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end mb-3">
        @Html.ActionLink("Thêm Mới", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>

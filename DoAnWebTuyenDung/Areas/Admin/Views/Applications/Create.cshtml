@model DoAnWebTuyenDung.Models.Application

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-3">Thêm Đơn Ứng Tuyển</h2>

<div class="container mt-4">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card border-0 shadow-sm mx-auto" style="max-width: 800px;">
            <!-- Header của card -->
            <div class="card-header text-center" style="background-color: #0094ff; color: #ffffff;">
                <h5 class="mb-0" style="color:#ffffff">Thêm Đơn Ứng Tuyển</h5>
            </div>
            <div class="card-body" style="background-color: #e9ecef;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!-- Trường Công Việc -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.job_id, "Công Việc", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("job_id", null, new { @class = "form-control mx-auto", style = "max-width: 600px;" })
                    @Html.ValidationMessageFor(model => model.job_id, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Ứng Viên -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.candidate_id, "Ứng Viên", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("candidate_id", null, new { @class = "form-control mx-auto", style = "max-width: 600px;" })
                    @Html.ValidationMessageFor(model => model.candidate_id, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Trạng Thái -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.status, "Trạng Thái", new { @class = "form-label fw-bold" })
                    @Html.DropDownListFor(model => model.status, new SelectList(new[]
                    {
                        new { Value = "applied", Text = "Đã Nộp" },
                        new { Value = "shortlisted", Text = "Đã Duyệt" },
                        new { Value = "interviewed", Text = "Đã Phỏng Vấn" },
                        new { Value = "rejected", Text = "Từ Chối" },
                        new { Value = "hired", Text = "Đã Tuyển" }
                    }, "Value", "Text"), new { @class = "form-control mx-auto", style = "max-width: 600px;" })
                    @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Ghi Chú -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.notes, "Ghi Chú", new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.notes, new { htmlAttributes = new { @class = "form-control mx-auto", style = "max-width: 600px;" } })
                    @Html.ValidationMessageFor(model => model.notes, "", new { @class = "text-danger" })
                </div>

                <!-- Nút Lưu -->
                <div class="text-center mt-4">
                    <input type="submit" value="Thêm Mới" class="btn btn-success" />
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary ms-2" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

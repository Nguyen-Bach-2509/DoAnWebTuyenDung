<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - QUẢN TRỊ WEBSITE</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar-custom {
            background-color: #28a745; /* Use the same green color as in the user interface */
        }

        .navbar-brand, .nav-link, footer {
            color: white; /* Make links and text white for better contrast */
        }

            .nav-link:hover {
                color: #ddd; /* Lighter hover color */
            }

        h2, h5 {
            color: #28a745; /* Use the green for section titles */
        }

        footer {
            background-color: #333; /* Dark footer as in the user layout */
            padding: 10px;
            color: #fff;
            text-align: center;
        }

        .container.body-content {
            padding: 20px;
        }

        .btn-custom {
            background-color: #ff4757;
            color: #fff;
            border: none;
            padding: 10px 20px;
        }

            .btn-custom:hover {
                background-color: #ff6b81;
                color: #fff;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark navbar-custom">
        <div class="container">
            @Html.ActionLink("Bảng điều khiển Quản trị", "Index", "Home", new { area = "admin" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarAdmin" title="Chuyển đổi điều hướng" aria-controls="navbarAdmin"
                    aria-expanded="false" aria-label="Chuyển đổi điều hướng">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarAdmin">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">@Html.ActionLink("Trang chủ Quản trị", "Index", "Home", new { area = "admin" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Quản lý Người dùng", "Index", "User", new { area = "admin" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Quản lý Công ty", "Index", "Company", new { area = "admin" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Quản lý Danh mục", "Index", "JobCategories", new { area = "admin" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Quản lý Công việc", "Index", "Jobs", new { area = "admin" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Quản lý Ứng viên", "Index", "Candidate", new { area = "admin" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Quản lý Đơn ứng tuyển", "Index", "Application", new { area = "admin" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        <div class="text-center my-4">
            <h2>@ViewBag.Title</h2>
        </div>

        @RenderBody() <!-- Main content will be injected here -->

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hệ thống Quản trị Tuyển dụng</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false) <!-- Optional section for additional scripts -->
</body>
</html>

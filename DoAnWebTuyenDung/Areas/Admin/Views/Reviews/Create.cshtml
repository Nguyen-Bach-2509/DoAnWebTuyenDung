@model DoAnWebTuyenDung.Models.Review

@{
    ViewBag.Title = "Tạo Đánh giá";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; // Layout quản trị
}

<h2 class="text-center mt-3">Tạo Đánh giá Mới</h2>

<div class="container mt-4">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card border-0 shadow-sm mx-auto" style="max-width: 800px;">
            <div class="card-header text-center" style="background-color: #0094ff; color: #ffffff;">
                <h5 class="mb-0">Tạo Đánh giá Mới</h5>
            </div>
            <div class="card-body" style="background-color: #e9ecef;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!-- Trường Ứng viên -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.candidate_id, "Ứng viên", new { @class = "form-label" })
                    @Html.DropDownList("candidate_id", (SelectList)ViewBag.candidate_id, "Chọn ứng viên", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.candidate_id, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Công việc -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.job_id, "Công việc", new { @class = "form-label" })
                    @Html.DropDownList("job_id", (SelectList)ViewBag.job_id, "Chọn công việc", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.job_id, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Đánh giá -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.rating, "Đánh giá", new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.rating, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.rating, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Nội dung đánh giá -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.review_text, "Nội dung đánh giá", new { @class = "form-label" })
                    @Html.TextAreaFor(model => model.review_text, new { @class = "form-control", rows = 5 })
                    @Html.ValidationMessageFor(model => model.review_text, "", new { @class = "text-danger" })
                </div>

                <div class="text-center">
                    <input type="submit" value="Tạo Đánh giá" class="btn btn-primary" />
                    @Html.ActionLink("Quay lại", "AllReviews", null, new { @class = "btn btn-secondary ms-2" })
                </div>
            </div>
        </div>
    }
</div>
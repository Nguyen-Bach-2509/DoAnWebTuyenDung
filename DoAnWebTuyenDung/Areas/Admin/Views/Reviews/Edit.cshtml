@model DoAnWebTuyenDung.Models.Review

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-3">Chỉnh Sửa Đánh Giá</h2>

<div class="container mt-4">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card border-0 shadow-sm mx-auto" style="max-width: 800px;">
            <!-- Header của card -->
            <div class="card-header text-center" style="background-color: #0094ff; color: #ffffff;">
                <h5 class="mb-0">Chỉnh Sửa Đánh Giá</h5>
            </div>
            <div class="card-body" style="background-color: #e9ecef;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.review_id)

                <!-- Trường Công việc -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.job_id, "Công việc", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("job_id", null, new { @class = "form-control mx-auto", style = "max-width: 600px;" })
                    @Html.ValidationMessageFor(model => model.job_id, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Ứng viên -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.candidate_id, "Ứng viên", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("candidate_id", null, new { @class = "form-control mx-auto", style = "max-width: 600px;" })
                    @Html.ValidationMessageFor(model => model.candidate_id, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Đánh Giá -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.rating, "Đánh Giá (1-5)", new { @class = "form-label fw-bold" })
                    @Html.DropDownListFor(model => model.rating, new SelectList(Enumerable.Range(1, 5)), new { @class = "form-control mx-auto", style = "max-width: 600px;" })
                    @Html.ValidationMessageFor(model => model.rating, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Nội Dung Đánh Giá -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.review_text, "Nội dung đánh giá", new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.review_text, new { htmlAttributes = new { @class = "form-control mx-auto", style = "max-width: 600px;" } })
                    @Html.ValidationMessageFor(model => model.review_text, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Ngày Tạo -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.created_at, "Ngày tạo", new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.created_at, new { htmlAttributes = new { @class = "form-control mx-auto", style = "max-width: 600px;" } })
                    @Html.ValidationMessageFor(model => model.created_at, "", new { @class = "text-danger" })
                </div>

                <!-- Nút Lưu -->
                <div class="text-center mt-4">
                    <input type="submit" value="Lưu Thay Đổi" class="btn btn-success" />
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary ms-2" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model DoAnWebTuyenDung.Models.User

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-3">Chi Tiết Người Dùng</h2>

<div class="container mt-4">
    <div class="card border-0 shadow-sm mx-auto" style="max-width: 800px;">
        <!-- Căn giữa tiêu đề và đổi màu nền của card-header -->
        <div class="card-header text-center" style="background-color: #0094ff; color: #ffffff;">
            <h5 class="mb-0 " style="color:#ffffff">Thông Tin Người Dùng</h5>
        </div>
        <div class="card-body" style="background-color: #e9ecef;">
            <dl class="row justify-content-center">
                <dt class="col-sm-3 fw-bold">Tên người dùng:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.username)</dd>

                <dt class="col-sm-3 fw-bold">Mật khẩu:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.password)</dd>

                <dt class="col-sm-3 fw-bold">Email:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.email)</dd>

                <dt class="col-sm-3 fw-bold">Vai trò:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.role)</dd>

                <dt class="col-sm-3 fw-bold">Ngày tạo:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.created_at)</dd>

                <dt class="col-sm-3 fw-bold">Ngày cập nhật:</dt>
                <dd class="col-sm-7">@Html.DisplayFor(model => model.updated_at)</dd>
            </dl>

            <div class="text-center mt-4">
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.user_id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary ms-2" })
            </div>
        </div>
    </div>
</div>

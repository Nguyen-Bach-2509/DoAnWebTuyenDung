@model DoAnWebTuyenDung.Models.User

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-3">Chỉnh Sửa Người Dùng</h2>

<div class="container mt-4">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card border-0 shadow-sm mx-auto" style="max-width: 800px;">
            <!-- Căn giữa tiêu đề và đổi màu nền của card-header -->
            <div class="card-header text-center" style="background-color: #0094ff; color: #ffffff;">
                <h5 class="mb-0" style="color:#ffffff">Chỉnh Sửa Thông Tin Người Dùng</h5>
            </div>
            <div class="card-body" style="background-color: #e9ecef;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.user_id)

                <!-- Trường Username -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.username, "Tên người dùng", new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control mx-auto", style = "max-width: 600px;" } })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Password -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.password, "Mật khẩu", new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control mx-auto", style = "max-width: 600px;" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Email -->
                <div class="mb-3 text-center">
                    @Html.LabelFor(model => model.email, "Email", new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control mx-auto", style = "max-width: 600px;" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>

                <!-- Trường Vai Trò (Radio Buttons) -->
                <div class="mb-3 text-center">
                    @Html.Label("Vai Trò", new { @class = "form-label fw-bold" })
                    <div class="d-flex justify-content-center flex-wrap">
                        <div class="form-check form-check-inline">
                            <input type="radio" name="role" value="EMPLOYER" class="form-check-input" id="roleEmployer" @(Model.role == "EMPLOYER" ? "checked" : "") />
                            <label class="form-check-label" for="roleEmployer">Employer</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input type="radio" name="role" value="CANDIDATE" class="form-check-input" id="roleCandidate" @(Model.role == "CANDIDATE" ? "checked" : "") />
                            <label class="form-check-label" for="roleCandidate">Candidate</label>
                        </div>
                    </div>
                    @Html.ValidationMessage("role", "", new { @class = "text-danger" })
                </div>
                <div class="text-center mt-4">
                    <input type="submit" value="Lưu" class="btn btn-success" />
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary ms-2" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model DoAnWebTuyenDung.Models.JobCategory

@{
    ViewBag.Title = "Chi Tiết Danh Mục Công Việc";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center text-white p-3" style="background-color: #28a745;">CHI TIẾT DANH MỤC CÔNG VIỆC</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Thông Tin Chi Tiết Danh Mục</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover" style="background-color: #f8f9fa;">
                        <tbody>
                            <tr>
                                <th class="text-center">TÊN DANH MỤC</th>
                                <td class="text-center">@Html.DisplayFor(model => model.CategoryName)</td>
                            </tr>
                            <tr>
                                <th class="text-center">MÔ TẢ</th>
                                <td class="text-center">@Html.DisplayFor(model => model.Description)</td>
                            </tr>
                            <tr>
                                <th class="text-center">TRẠNG THÁI</th>
                                <td class="text-center">
                                    @if (Model.Status)
                                    {
                                        <span class="text-success">Đang hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">Không hoạt động</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th class="text-center">NGÀY TẠO</th>
                                <td class="text-center">@Html.DisplayFor(model => model.CreatedDate)</td>
                            </tr>
                            <tr>
                                <th class="text-center">SỐ LƯỢNG CÔNG VIỆC</th>
                                <td class="text-center">@Html.DisplayFor(model => model.JobCount)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-right">
                    @Html.ActionLink("Cập nhật", "Edit", new { id = Model.CategoryID }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </div>
</div>
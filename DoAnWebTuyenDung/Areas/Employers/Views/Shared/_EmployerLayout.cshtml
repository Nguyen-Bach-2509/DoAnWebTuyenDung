@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Employers</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Varela Round', sans-serif;
            background-color: #f9f9f9;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #FF4C4C;
            padding: 15px 30px;
            color: white;
        }

        .logo {
            display: flex;
            align-items: center;
        }

            .logo img {
                width: 60px;
                height: 60px;
                margin-right: 10px;
            }

        .logo-text {
            font-size: 18px;
            font-weight: bold;
        }

        nav ul {
            display: flex;
            list-style: none;
        }

            nav ul li {
                margin: 0 15px;
            }

                nav ul li a {
                    text-decoration: none;
                    color: white;
                    font-size: 16px;
                }

                    nav ul li a:hover {
                        text-decoration: underline;
                    }

        .auth-buttons {
            display: flex;
            align-items: center;
        }

            .auth-buttons a {
                text-decoration: none;
                margin-left: 15px;
                padding: 10px 15px;
                border-radius: 20px;
                font-size: 14px;
                background: white;
                color: #FF4C4C;
                font-weight: bold;
            }

                .auth-buttons a:hover {
                    background-color: #ffe6e6;
                }

        .main-content {
            padding: 40px;
            max-width: 1200px;
            margin: auto;
        }

        footer {
            background-color: #23272b;
            color: white;
            text-align: center;
            padding: 20px 0;
            margin-top: 40px;
        }

            footer p {
                margin: 0;
                font-size: 14px;
            }
    </style>
</head>
<body>
    <header>
        <div class="logo">
            <img src="~/Content/vieclam24h.jpg" alt="Vieclam24h logo">
            <div class="logo-text">Trang Nhà Tuyển Dụng</div>
        </div>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "Home", new { area = "Employers" })">Bảng điều khiển</a></li>
                <li><a href="@Url.Action("Index", "Jobs", new { area = "Employers" })">Quản lý công việc</a></li>
                <li><a href="@Url.Action("Index", "Notifications", new { area = "Employers" })">Thông báo</a></li>
            </ul>
        </nav>
        <div class="auth-buttons">
            @if (Session["Username"] != null)
            {
                <a href="~/Account/Logout">Đăng Xuất</a>
            }
        </div>
    </header>
    <div class="main-content">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; 2024 Vieclam24h. All rights reserved.</p>
    </footer>
</body>
</html>
